{
  "name": "maplibre-gl-wind",
  "description": "Wind particle visualization layer for deck.gl and MapLibre GL JS",
  "version": "0.1.1",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "echo 'test!'",
    "prepare": "is-ci || husky",
    "lint": "oxlint --deny-warnings",
    "lint:fix": "oxlint --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "publish:npm": "npm publish --access public",
    "publish:jsr": "bunx jsr publish"
  },
  "peerDependencies": {
    "@deck.gl/core": ">=9.0.0",
    "@deck.gl/layers": ">=9.0.0",
    "@luma.gl/core": ">=9.0.0",
    "@luma.gl/engine": ">=9.0.0",
    "@luma.gl/shadertools": ">=9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@deck.gl/core": "^9.1.16",
    "@deck.gl/layers": "^9.1.16",
    "@luma.gl/core": "^9.2.0",
    "@luma.gl/engine": "^9.2.0",
    "@luma.gl/shadertools": "^9.2.0",
    "@types/node": "^25.0.6",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.39.0",
    "prettier": "^3.7.4",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "deck.gl",
    "maplibre",
    "wind",
    "visualization",
    "weather",
    "particles",
    "webgl",
    "map"
  ],
  "author": {
    "name": "Vinayak Kulkarni",
    "email": "inbox.vinayak@gmail.com",
    "url": "https://vinayakkulkarni.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "bun@1.3.5",
  "private": false,
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/geoql/maplibre-gl-wind/issues"
  },
  "homepage": "https://github.com/geoql/maplibre-gl-wind#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geoql/maplibre-gl-wind.git"
  }
}
